#1. Basic Shortcuts (Most Common)
# Core aliases
alias k='kubectl'
alias kg='kubectl get'
alias kd='kubectl describe'
alias kdel='kubectl delete'
alias ka='kubectl apply -f'
alias kc='kubectl create'
alias ke='kubectl edit'
alias kgy='kubectl get -o yaml'
alias kl='kubectl logs'
alias kp='kubectl port-forward'
alias kx='kubectl exec -it'

#2. Get Resources with Formatting
# Get with various outputs
alias kgp='kubectl get pods'
alias kgpw='kubectl get pods -o wide'
alias kgpa='kubectl get pods --all-namespaces'
alias kgn='kubectl get nodes'
alias kgs='kubectl get services'
alias kgd='kubectl get deployments'
alias kgi='kubectl get ingress'
alias kgc='kubectl get configmaps'
alias kgsec='kubectl get secrets'
alias kgns='kubectl get namespaces'
alias kgrs='kubectl get replicasets'
alias kgds='kubectl get daemonsets'
alias kgss='kubectl get statefulsets'
alias kgpvc='kubectl get pvc'
alias kgpv='kubectl get pv'
#3. Watch Commands
# Watch resources
alias kwp='watch kubectl get pods'
alias kwn='watch kubectl get nodes'
alias kws='watch kubectl get services'
alias kwd='watch kubectl get deployments'

#4. Describe Commands
# Describe resources
alias kdp='kubectl describe pod'
alias kdn='kubectl describe node'
alias kds='kubectl describe service'
alias kdd='kubectl describe deployment'
alias kdi='kubectl describe ingress'
alias kdc='kubectl describe configmap'
alias kdsec='kubectl describe secret'
alias kdpvc='kubectl describe pvc'

#5. Logs & Debugging
# Log commands
alias klf='kubectl logs -f'
alias klp='kubectl logs -f --previous'
alias kl1h='kubectl logs --since=1h'
alias kl1d='kubectl logs --since=24h'
alias ktail='kubectl logs --tail=100'

# Debug pods
alias kdebug='kubectl run -it --rm --restart=Never debug --image=busybox -- sh'
alias kdebug2='kubectl run -it --rm --restart=Never debug --image=nicolaka/netshoot -- /bin/bash'

#6. Exec & Port Forwarding
# Exec into pods
alias kex='kubectl exec -it'
alias ksh='kubectl exec -it -- sh'
alias kbash='kubectl exec -it -- bash'

# Port forwarding
alias kpf='kubectl port-forward'
alias kpfsvc='kubectl port-forward svc/'
alias kpfpod='kubectl port-forward pod/'

#7. Deployment & Rollout
# Deployment management
alias krs='kubectl rollout status'
alias kru='kubectl rollout undo'
alias krh='kubectl rollout history'
alias kscale='kubectl scale'
alias krestart='kubectl rollout restart deployment'

#8. Context & Namespace Management
# Context switching
alias kctx='kubectl config use-context'
alias kgctx='kubectl config get-contexts'
alias kcctx='kubectl config current-context'

# Namespace switching
alias kns='kubectl config set-context --current --namespace'
alias kgns='kubectl get namespaces'
alias kcurrentns='kubectl config view --minify -o jsonpath="{..namespace}"'

#9. YAML Operations
# YAML operations
alias ky='kubectl get -o yaml'
alias kdry='kubectl apply --dry-run=client -f'
alias kdryserver='kubectl apply --dry-run=server -f'
alias kdiff='kubectl diff -f'
alias kexport='kubectl get -o yaml --export'

#10. Advanced & Custom Aliases
# Resource sorting
alias kgps='kubectl get pods --sort-by=".status.startTime"'
alias kgpss='kubectl get pods --sort-by=".status.containerStatuses[0].restartCount"'
alias kgpsa='kubectl get pods --sort-by=".metadata.creationTimestamp"'



# Quick resource info

alias ktop='kubectl top nodes && echo "---" && kubectl top pods'
alias kused='kubectl describe node | grep -A 10 "Allocated resources"'
alias kimages='kubectl get pods -o jsonpath="{.items[*].spec.containers[*].image}" | tr -s "[[:space:]]" "\n" | sort | uniq'

# Pod status helpers
alias khealthy='kubectl get pods | grep -v Running | grep -v Completed'
alias kproblems='kubectl get pods | grep -E "(Evicted|CrashLoopBackOff|Error|Completed)"'

#11. Batch Operations
# Delete all in namespace (use with caution!)

alias kdall='kubectl delete all --all'
alias kdallpvc='kubectl delete pvc --all'
alias kdallcm='kubectl delete cm --all'
alias kdallsec='kubectl delete secret --all'

# Restart all deployments
alias krestartall='kubectl get deployments -o name | xargs kubectl rollout restart'

#12. JSON & Output Filtering
# JSON path queries
alias kgpj='kubectl get pods -o jsonpath="{.items[*].metadata.name}"'
alias kgpi='kubectl get pods -o jsonpath="{.items[*].status.containerStatuses[*].image}"'
alias kgpn='kubectl get pods -o jsonpath="{range .items[*]}{.metadata.name}{\"\\t\"}{.status.phase}{\"\\t\"}{.spec.nodeName}{\"\\n\"}{end}"'
